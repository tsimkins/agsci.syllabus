<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en"
      xmlns:tal="http://xml.zope.org/namespaces/tal"
      xmlns:metal="http://xml.zope.org/namespaces/metal"
      xmlns:i18n="http://xml.zope.org/namespaces/i18n"
      lang="en"
      metal:use-macro="context/main_template/macros/master"
      i18n:domain="plone">

<body>

    <metal:content-core fill-slot="content-core">

        <tal:semester repeat="semester view/getFolderContents">
            <h2 tal:content="python: semester.get('title')" />

            <ul>
                <li tal:repeat="syllabus python: semester.get('contents')">
                    <a tal:attributes="href syllabus/absolute_url" tal:content="string:${context/Title} (${syllabus/Title})" />
                </li>
            </ul>

        </tal:semester>

    </metal:content-core>

</body>
</html>
